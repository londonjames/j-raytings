{
  "buildCommand": "cd frontend && npm install && npm run build && cp dist/index.html dist/films.html && cp public/index-homepage.html dist/index.html",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    {
      "source": "/films/(.*)",
      "destination": "/$1"
    },
    {
      "source": "/films",
      "destination": "/films.html"
    },
    {
      "source": "/books/(.*)",
      "destination": "/$1"
    },
    {
      "source": "/books",
      "destination": "/films.html"
    },
    {
      "source": "/books/admin",
      "destination": "/films.html"
    }
  ]
}
