{
  "buildCommand": "cd frontend && npm install && npm run build && cp dist/index.html dist/films.html && cp dist/index.html dist/books.html && cp public/index-homepage.html dist/index.html && node update-meta-tags.js",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    {
      "source": "/curated/:path*",
      "destination": "https://web-production-01d1.up.railway.app/curated/:path*"
    },
    {
      "source": "/curated",
      "destination": "https://web-production-01d1.up.railway.app/curated/"
    },
    {
      "source": "/films/admin",
      "destination": "/films.html"
    },
    {
      "source": "/films/(.*)",
      "destination": "/$1"
    },
    {
      "source": "/films",
      "destination": "/films.html"
    },
    {
      "source": "/books/admin",
      "destination": "/books.html"
    },
    {
      "source": "/books",
      "destination": "/books.html"
    },
    {
      "source": "/books/(.*)",
      "destination": "/books.html"
    }
  ]
}
