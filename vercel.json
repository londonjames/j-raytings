{
  "buildCommand": "cd frontend && npm install && npm run build && cp public/index-root.html dist/index-root.html",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    {
      "source": "/films/(.*)",
      "destination": "/$1"
    },
    {
      "source": "/films",
      "destination": "/index.html"
    }
  ],
  "routes": [
    {
      "src": "^/$",
      "dest": "/index-root.html"
    }
  ]
}
